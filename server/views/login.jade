extends layout

block content
  h1 login

  if messages
    ul
      for message in messages
        li=message

  h2 Github
  a(href="/auth/github") Login With Github

  h2 Basic Auth
    form(method="post" action="/auth/basic" enctype="application/x-www-form-urlencoded")
      label(for=email)
        | email: 
        input(name="email")
      label(for=password)
        | password: 
        input(name="password" type="text")

      button(type="submit") Login
